{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "extends": ["prettier", "airbnb-base"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": "error",
    "global-require": 0,
    "comma-dangle": ["error", "never"],
    "object-curly-newline": [
      "error",
      {
        "multilines": false
      }
    ]
  }
}
